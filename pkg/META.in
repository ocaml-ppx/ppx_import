version = "%{version}%"
description = "Avoid redundancy in type and signature declarations"
ppx = "./ppx_import"
requires(custom_ppx) = "ocaml-migrate-parsetree"
ppx(-custom_ppx,-ppx_driver) = "./ppx_import --as-ppx"
archive(byte,ppx_driver) = "ppx_import.cmo"
archive(native,ppx_driver) = "ppx_import.cmx"
plugin(byte,ppx_driver) = "ppx_import.cma"
plugin(native,ppx_driver) = "ppx_import.cmxs"
